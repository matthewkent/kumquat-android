<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/card_text"
        android:text="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textIsSelectable="false"
        android:textSize="50sp" />
    <LinearLayout
        android:id="@+id/main_menu_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
	    <Button
	        android:id="@+id/button_level1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:text="@string/button_level1"
	        android:onClick="startQuiz" />
        <Button
            android:id="@+id/button_level2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/button_level2"
            android:onClick="startQuiz" />
        <Button
            android:id="@+id/button_level3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/button_level3"
            android:onClick="startQuiz" />
        <Button
            android:id="@+id/button_level4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/button_level4"
            android:onClick="startQuiz" />
        <Button
            android:id="@+id/button_level5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/button_level5"
            android:onClick="startQuiz" />
        <Button
            android:id="@+id/button_level6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/button_level6"
            android:onClick="startQuiz" />
	    </LinearLayout>
</LinearLayout>