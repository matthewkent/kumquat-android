<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="KumquatTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="KumquatTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style> 
    <style name="definition">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:lineSpacingMultiplier">1.05</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/dark_gray_text</item>
    </style> 
    
    <style name="flip_button">
        <item name="android:src">@drawable/button_flip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:contentDescription">flip card</item>
    </style>
    
</resources>