<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    
   
    <style name="KumquatTheme" parent="android:Theme.Holo.Light">
     <item name="android:actionBarStyle">@style/KumquatTheme.ActionBarStyle</item>   	 
    </style>
    <style name="KumquatTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
   	 <item name="android:titleTextStyle">@style/KumquatTheme.ActionBar.TitleTextStyle</item>
	</style>
    <style name="KumquatTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
   	 <item name="android:textColor">@color/actionbar_title</item>
   	 <item name="android:textStyle">bold|normal</item>
    </style>
    <style name="KumquatTheme.ActionBar.MenuTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
     <item name="android:textColor">@color/dark_gray_text</item>
     <item name="android:gravity">center_horizontal</item>
     <item name="android:textSize">16sp</item>
    </style>

    
</resources>