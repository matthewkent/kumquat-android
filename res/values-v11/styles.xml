<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
   
     <style name="KumquatTheme" parent="android:Theme.Holo.Light">
     <item name="android:actionBarStyle">@style/KumquatTheme.ActionBarStyle</item>   	 
    </style>
    <style name="KumquatTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
   	 <item name="android:titleTextStyle">@style/KumquatTheme.ActionBar.TitleTextStyle</item>
	</style>
    <style name="KumquatTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
   	 <item name="android:textColor">@color/actionbar_title</item>
   	 <item name="android:textStyle">bold|normal</item>
    </style>
	  <style name="KumquatTheme.ActionBar.MenuTextStyle" parent="@android:style/TextAppearance">
     <item name="android:textColor">@color/dark_gray_text</item>
     <item name="android:gravity">center_horizontal</item>
     <item name="android:textSize">16sp</item>
     <item name="android:layout_centerVertical">true</item>
     <item name="android:textIsSelectable">false</item>
     <item name="android:textStyle">bold</item>
    </style>
    
</resources>